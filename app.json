{
  "expo": {
    "name": "DailyBasket",
    "slug": "grocery-app",
    "version": "1.0.0",

    "web": {
      "favicon": "./assets/icon.png",
      "bundler": "metro"
    },

    "experiments": {
      "tsconfigPaths": true
    },

    "plugins": ["expo-splash-screen"],

    "orientation": "portrait",
    "icon": "./assets/icon.png",

    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF3B0"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dailybasket.groceryapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#FFF3B0"
      },
      "package": "com.dailybasket.groceryapp"
    }
  }
}
